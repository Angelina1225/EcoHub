
<h1>Create Event</h1>
<br>
<br>
{{#if hasError}}
    <p class="error">{{error}}</p>
    {{/if}}

<form id="eventForm" method="POST" action="/events/addEvent">
    <!-- Event Details -->
    <label for="title">Event Title:</label>
    <input type="text" id="title" name="title" required minlength="2" placeholder="Enter event title">
    <br>
    <label for="description">Event Description:</label>
    <textarea id="description" name="description" required minlength="5" placeholder="Enter event description"></textarea>
    <br>
    <label for="eventDate">Event Date:</label>
    <input type="date" id="eventDate" name="eventDate" required>
    <br>
    <label for="eventTime">Event Time:</label>
    <input type="time" id="eventTime" name="eventTime" required>
    <br>

     <label for="volunteersNeeded">
        <input type="checkbox" id="volunteersNeeded" name="volunteersNeeded" value="true" onchange="toggleVolunteerInput()"> 
        Are Volunteers Needed?
    </label>
    <br>
    <div id="volunteerField" style="display:none;">
        <label for="requiredVolunteer">Number of Volunteers Needed:</label>
        <input type="number" id="requiredVolunteer" name="requiredVolunteer" min="0" placeholder="Enter number of volunteers needed">
        <br>
    </div>

    <!-- Address Details -->
    <h2>Event Location</h2>
    <label for="address">Address:</label>
    <input type="text" id="address" name="place[address]" required minlength="5" placeholder="Enter address">
    <br>
    <label for="city">City:</label>
    <input type="text" id="city" name="place[city]" required minlength="2" placeholder="Enter city">
    <br>
    <label for="state">State:</label>
    <input type="text" id="state" name="place[state]" required minlength="2" maxlength="2" placeholder="Enter 2-letter state abbreviation">
    <br>
    <label for="zip">Zip Code:</label>
    <input type="text" id="zip" name="place[zip]" required minlength="5" maxlength="5" placeholder="Enter Zip code">
    <br>
    <button type="submit">Create Event</button>

</form>


<script>
    function toggleVolunteerInput() {
        const volunteerField = document.getElementById("volunteerField");
        const volunteersNeeded = document.getElementById("volunteersNeeded");
        if (volunteersNeeded.checked) {
            volunteerField.style.display = "block";
        } else {
            volunteerField.style.display = "none";
        }
    }
</script>