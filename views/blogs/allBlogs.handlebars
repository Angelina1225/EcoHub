<div class="blog-posts">
  <h1>Blog Posts</h1>
  <div class="blog-container">
    {{#each blogPosts}}
      <div class="blog-card">
        <img src="{{image}}" alt="Blog Image" class="blog-image">
        <h3>{{title}}</h3>
        <p>{{truncatedBody}}</p>
        <a href="/blogs/{{encodeURIComponent title}}" class="read-more">Read More</a>
      </div>
    {{/each}}
  </div>
</div>


<style>
  .blog-posts {
    padding: 20px;
  }
  .grid-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  .blog-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 15px;
    text-align: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }
  .blog-image {
    max-width: 100%;
    border-radius: 4px;
  }
</style>
