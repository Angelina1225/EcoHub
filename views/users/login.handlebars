<div class="login-container">
    <h2>Sign in to EcoHub</h2>

    <a href="/auth/google" class="google-signin-btn">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQjzC2JyZDZ_RaWf0qp11K0lcvB6b6kYNMoqtZAQ9hiPZ4cTIOB"
            alt="Google Logo" class="google-img">
        <p>Sign in with Google</p>
    </a>

    <div class="signin-option">
        <span>or sign in with email</span>
    </div>

    <form action="/signin" method="POST" class="login-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" value="{{user.email}}" required>
        </div>

        <div class="form-group">
            <div class="password-label">
                <label for="password">Password</label>
                <p class="forgot-password-link"><a href="/reset">Forgot password?</a></p>
            </div>
            <input type="password" name="password" id="password" value="{{user.password}}" required>
            {{#if hasError}}
            <p class="error-message">{{error}}</p>
            {{/if}}
        </div>

        <button class="btn" type="submit">Sign In</button>
    </form>

    <p class="signup-link">Don't have an account? <a href="/signup">Sign Up</a></p>
</div>